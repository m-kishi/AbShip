<!DOCTYPE html>
<html>
<head>
  <title>AbShip</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag %>
</head>
<body>
<div class="application-area">
  <div class="navigation-area">
    <table>
      <tr>
        <td class="app-title"><%= link_to 'AbShip', :root, class: 'app-name' %></td>
        <td class="navigation-link">
          <% if current_user %>
            <%= link_to '編集', edit_user_path(current_user.id) %> <span class="pipe-line">|</span>
            <%= link_to 'ログアウト', :logout, method: :post %>
          <% else %>
            <%= link_to '登録', new_user_path %> <span class="pipe-line">|</span>
            <%= link_to 'ログイン', :login %>
          <% end %>
        </td>
      </tr>
    </table>
  </div>
  <div class="tab-menu">
    <ul>
      <li class="<%= @expense_selected ? 'on' : 'off' %>"><%= link_to '支出  ', expense_path(year: Date.today.year, mnth: Date.today.month) %></li>
      <li class="<%= @summary_selected ? 'on' : 'off' %>"><%= link_to '集計  ', summary_path(year: Date.today.year, mnth: Date.today.month) %></li>
      <li class="<%= @graphic_selected ? 'on' : 'off' %>"><%= link_to 'グラフ', graphic_path(year: Date.today.year, mnth: Date.today.month) %></li>
      <li class="<%= @balance_selected ? 'on' : 'off' %>"><%= link_to '収支  ', balance_path %></li>
      <li class="<%= @private_selected ? 'on' : 'off' %>"><%= link_to '秘密  ', private_path %></li>
      <li class="<%= @uploads_selected ? 'on' : 'off' %>"><%= link_to 'ＤＢ  ', uploads_path %></li>
    </ul>
  </div>
  <div class="context">
    <div class="main-area">
      <div id="loading">
        <!-- <div id="uploading">Uploading...</div> -->
      </div>
      <%= yield %>
    </div>
  </div>
</div>
</body>
</html>
