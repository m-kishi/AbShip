<% if @balances.empty? %>
  <h2>Balance Data Nothing</h2>
<% else %>
  <div style="width:747px;">
    <%= link_to 'PDF', balance_pdf_path %>
  </div>
  <!-- テーブル全体を表すDIV -->
  <div style="width:747px;">
    <!-- ヘッダ(thead)を表すDIV -->
    <div style="width:100%;">
      <table class="scroll">
        <colgroup>
          <col style="width: 80px;">
          <col style="width:130px;">
          <col style="width:130px;">
          <col style="width:130px;">
          <col style="width:130px;">
          <col style="width:130px;">
          <col style="width: 16px;">
        </colgroup>
        <thead>
          <tr>
            <th>年度</th>
            <th>収入</th>
            <th>特入</th>
            <th>支出</th>
            <th>特出</th>
            <th>収支</th>
            <th></th>
          </tr>
        </thead>
      </table>
    </div>
    <!-- ボディ(tbody)を表すDIV -->
    <div style="height:360px;width:100%;overflow-y:scroll;overflow-x:hidden;">
      <table class="scroll">
        <colgroup>
          <col style="width: 80px;">
          <col style="width:130px;">
          <col style="width:130px;">
          <col style="width:130px;">
          <col style="width:130px;">
          <col style="width:130px;">
        </colgroup>
        <tbody>
          <% @balances.each do |blc| %>
            <tr>
              <td><%= blc["year"] %></td>
              <td class="currency"><%= to_currency(blc.earn) %></td>
              <td class="currency"><%= to_currency(blc.bnus) %></td>
              <td class="currency"><%= to_currency(blc.expense) %></td>
              <td class="currency"><%= to_currency(blc.special) %></td>
              <td class="currency"><%= to_currency(blc.balance) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% end %>
