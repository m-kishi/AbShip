<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="user-error-area">
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li class="message"><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <table class="user">
    <tr>
      <td class="label"><%= f.label :mail, 'Mail:' %></td>
      <td class="input"><%= f.text_field :mail, class: 'txt-mail' %></td>
    </tr>
    <tr>
      <td class="label"><%= f.label :password, 'Pass:' %></td>
      <td class="input"><%= f.password_field :password, class: 'txt-pass' %></td>
    </tr>
    <tr>
      <td class="label"><%= f.label :password, '(Re)Pass:' %></td>
      <td class="input"><%= f.password_field :password_confirmation, class: 'txt-pass' %></td>
    </tr>
    <tr>
      <td colspan="2" class="button"><%= f.submit class: 'btn-submit-user' %></td>
    </tr>
  </table>
<% end %>
